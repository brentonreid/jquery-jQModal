<!-- Post Partial -->
<div class="post_div">
    <h2><%=h post.title %></h2>
    <p><%=h post.body %><p>
    
    <%= link_to 'Show', post %>
    <%= link_to "Edit", {:controller => 'posts', :action => "edit",:id => post.id},  :class=> "edit" %>
    <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
</div>
<h1>Editing post</h1>

<div id="post_edit">
    <span title="close editor" class="close">close (x)</span>
    <% form_for(@post, :id=> "post_edit_form") do |f| %>
        <div class="error_messages">
            <%= f.error_messages %>
        </div>

        <p>
            <%= f.label :title %><br />
            <%= f.text_field :title %>
        </p>
        <p>
            <%= f.label :body %><br />
            <%= f.text_area :body, :rows => 5 %>
        </p>

        <%= f.submit "Save Changes", :class => 'save' %>
    <% end %>
</div>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>